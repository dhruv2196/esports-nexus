# Esports Nexus Environment Variables
# Copy this file to .env and update with your values

# JWT Configuration
# IMPORTANT: JWT secret must be at least 512 bits (64 characters) for HS512 algorithm
# You can generate a secure key using: openssl rand -base64 64
JWT_SECRET=esportsNexusSecretKey2024VeryLongAndSecureKeyThatIsAtLeast512BitsLongForHS512AlgorithmRequirementThisNeedsToBeReallyLongToMeetTheRequirement

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=esportsNexusAdmin2024
MONGO_DATABASE=esports_nexus

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_MULTIPLE_DATABASES=esports_nexus_users,esports_nexus_tournaments,esports_nexus_teams,esports_nexus_games,esports_nexus_analytics,esports_nexus_payments

# Game API Keys (Optional)
PUBG_API_KEY=your_pubg_api_key_here
RIOT_API_KEY=your_riot_api_key_here

# OAuth2 Configuration (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS Configuration (Optional - for AI service)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=esports-nexus-models

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Service URLs (for local development)
USER_SERVICE_URL=http://localhost:3000
TOURNAMENT_SERVICE_URL=http://localhost:8081
GAME_SERVICE_URL=http://localhost:5000
AI_SERVICE_URL=http://localhost:5001
PAYMENT_SERVICE_URL=http://localhost:8083